<common:LayoutAwarePage
    x:Class="OKr.Win8Book.Client.View.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OKr.Win8Book.Client.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:OKr.Win8Book.Client.Common"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Page.Resources>
        <DataTemplate x:Key="categoryTemplate">
            <Grid Width="300" Height="159" Tapped="OnCategory">
                <Grid Margin="10">
                    <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding Title}" Margin="0,10,0,0"/>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ChapterTemplate">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Rectangle Style="{StaticResource Home_Chapter_Icon_Read_Style}"/>
                <TextBlock Grid.Column="1" Text="{Binding Title}" Style="{StaticResource Home_ChapterName_Style}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="MarkTemplate">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Rectangle Style="{StaticResource Home_Chapter_Icon_Read_Style}"/>
                <TextBlock Grid.Column="1" Text="{Binding Title}" Style="{StaticResource Home_ChapterName_Style}" Foreground="Black"/>
                <TextBlock Grid.Column="2" Text="{Binding Content}" Style="{StaticResource Home_ChapterName_Style}" Foreground="Blue"/>
            </Grid>
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" IsEnabled="False" Style="{StaticResource BackButtonStyle}" Click="GoBack"/>
            <TextBlock x:Name="pageTitle" Text="首页" Grid.Column="1" Style="{StaticResource PageTitleStyle}"/>
        </Grid>

        <!--test-->
        <ToggleSwitch HorizontalAlignment="Right" Header="Switch Theme" Toggled="ToggleSwitch_Toggled"/>

        <!--full view-->
        <ScrollViewer x:Name="gridViewScrollViewer"  Grid.Row="1"
                      ZoomMode="Disabled"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      HorizontalScrollMode="Enabled" VerticalScrollMode="Disabled"
                      HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!--column 0-->
                <Grid Margin="120,0,0,0" Width="560" DataContext="{Binding Book}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="目录" Style="{StaticResource Home_SectionTileStyle}"/>
                        <TextBlock Style="{StaticResource Home_SectionTileCountStyle}">
                            <Run Text="共"/>
                            <Run Text="{Binding Chapters.Count}"/>
                            <Run Text="章"/>
                        </TextBlock>
                    </StackPanel>
                    <ListView Grid.Row="1" Margin="0,20,0,0"
                            ItemsSource="{Binding Chapters}"
                            ItemTemplate="{StaticResource ChapterTemplate}"
                            SelectionMode="None"
                            IsItemClickEnabled="True"
                            ItemClick="Chapters_ItemClick" >
                    </ListView>
                </Grid>
                <!--column 1-->
                <Grid Grid.Column="1" Margin="120,0,0,0" Width="560">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="目录" Style="{StaticResource Home_SectionTileStyle}"/>
                        <TextBlock Style="{StaticResource Home_SectionTileCountStyle}" DataContext="{Binding Mark}">
                            <Run Text="共"/>
                            <Run Text="{Binding Marks.Count}"/>
                            <Run Text="枚"/>
                        </TextBlock>
                    </StackPanel>
                    <ListView Grid.Row="1" Margin="0,20,0,0"
                            ItemsSource="{Binding RecentMarks}"
                            ItemTemplate="{StaticResource MarkTemplate}"
                            SelectionMode="None"
                            IsItemClickEnabled="True"
                            ItemClick="Mark_ItemClick" >
                    </ListView>
                </Grid>
            </Grid>
        </ScrollViewer>


        <!--snapped view-->
        <!--TO-DO-->

        <GridView x:Name="categoryGridView" Grid.Row="1" SelectionMode="None" Padding="116,0,40,46" 
                  ItemsSource="{Binding Chapters}" ItemTemplate="{StaticResource categoryTemplate}"
                  Visibility="Collapsed">
        </GridView>

        <ProgressRing x:Name="pr" Foreground="LightBlue" Width="122" Height="122" />

    </Grid>
</common:LayoutAwarePage>