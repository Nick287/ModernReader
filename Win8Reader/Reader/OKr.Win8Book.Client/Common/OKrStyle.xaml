<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OKr.Win8Book.Client.Common">

    
    <!--base-->
    <Style x:Key="OKrTheme_TextBlock_Dark" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FF000000"/>
    </Style>

    <Style x:Key="OKrTheme_TextBlock_Light" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
    </Style>

    <Style x:Key="OKrTextBlockStyleBase" TargetType="TextBlock" BasedOn="{StaticResource OKrTheme_TextBlock_Dark}">
        <Setter Property="FontFamily" Value="Microsoft YaHei"/>
        <Setter Property="TextTrimming" Value="WordEllipsis"/>
    </Style>

    <!--common-->
    <Style x:Key="PageTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource OKrTextBlockStyleBase}">
        <Setter Property="FontSize" Value="56"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="120,0,0,0"/>
    </Style>

    <!--Home-->
    <Style x:Key="Home_ChaptersTileStyle" TargetType="TextBlock" BasedOn="{StaticResource OKrTextBlockStyleBase}">
        <Setter Property="FontSize" Value="56"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="120,0,0,0"/>
    </Style>

